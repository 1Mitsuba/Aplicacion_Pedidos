@model Aplicacion_Pedidos.Models.Product

@{
    ViewData["Title"] = "Detalles de Producto";
}

<div class="card">
    <div class="row g-0">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name">
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 100%;">
                    <i class="fas fa-image fa-3x text-muted"></i>
                </div>
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title">@Model.Name</h3>
                
                <div class="mb-3">
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                        @(Model.IsActive ? "Activo" : "Inactivo")
                    </span>
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Descripción</dt>
                    <dd class="col-sm-9">@Model.Description</dd>

                    <dt class="col-sm-3">Precio</dt>
                    <dd class="col-sm-9">$@Model.Price.ToString("N2")</dd>

                    <dt class="col-sm-3">Stock</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.Stock > 0 ? "bg-success" : "bg-danger")">
                            @Model.Stock unidades
                        </span>
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.SKU))
                    {
                        <dt class="col-sm-3">SKU</dt>
                        <dd class="col-sm-9">@Model.SKU</dd>
                    }

                    <dt class="col-sm-3">Creado</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                    @if (Model.UpdatedAt.HasValue)
                    {
                        <dt class="col-sm-3">Actualizado</dt>
                        <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    }
                </dl>

                <div class="mt-3">
                    @if (User.IsInRole("Admin") || User.IsInRole("Empleado"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>